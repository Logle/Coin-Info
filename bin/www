#!/usr/bin/env node
var debug = require('debug')('scraper_bot');
var app = require('../app');
var scraperAlpha = require('../scraperAlpha');
var scraperBeta = require('../scraperBeta');
var scraperCenturion = require('../scraperCenturion');
var scraperBCmagazine = require('../scraperBCmagazine');

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

// Scraping data - comment out this function if data mining is not needed.
scraperAlpha();
scraperBeta();
scraperCenturion();
scraperBCmagazine();



